<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4E6F6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="98dp"
        android:layout_y="20dp"
        android:text="User Details"
        android:textColor="#0E0101"
        android:textColorLink="#AE8D8D"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="-1dp"
        android:layout_y="101dp"
        android:text=" Registration Number:"
        android:textColor="#0B0000"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/RegistrationNumber"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="243dp"
        android:layout_y="89dp"
        android:inputType="textShortMessage|textLongMessage|number"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="42dp"
        android:layout_y="156dp"
        android:text="Name:"
        android:textColor="#250303"
        android:textSize="25sp"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="244dp"
        android:layout_y="137dp"
        android:inputType="text"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="39dp"
        android:layout_y="208dp"
        android:text="Phone:"
        android:textColor="#2F0404"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="244dp"
        android:layout_y="190dp"
        android:inputType="number"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Insert"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_x="25dp"
        android:layout_y="274dp"
        android:onClick="Insert"
        android:text="@string/login_register"
        android:textSize="30dp" />

    <Button
        android:id="@+id/Delete"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_x="225dp"
        android:layout_y="439dp"
        android:text="Delete"
        android:textSize="30dp" />

    <Button
        android:id="@+id/Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="357dp"
        android:text="Update"
        android:textSize="30dp" />

    <Button
        android:id="@+id/View"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="215dp"
        android:layout_y="356dp"
        android:text="View"
        android:textSize="30dp" />

    <Button
        android:id="@+id/ViewAll"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="12dp"
        android:layout_y="436dp"
        android:text="View All"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="106dp"
        android:layout_height="103dp"
        android:layout_x="155dp"
        android:layout_y="544dp"
        android:src="@drawable/ic_baseline_fastfood_24" />

</AbsoluteLayout>

